<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/math_operation"
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:layout_height="120dp"
        android:layout_gravity="end"
        android:ellipsize="start"
        android:textSize="40dp"
        android:singleLine="true"
        android:gravity="end"
        android:layout_marginRight="10dp"
    />

    <TextView
        android:id="@+id/math_result"
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:layout_height="110dp"
        android:layout_gravity="end"
        android:ellipsize="start"
        android:text=""
        android:textSize="30dp"
        android:singleLine="true"
        android:layout_marginRight="10dp"
        android:gravity="end"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:text="AC"
                android:id="@+id/backspace"
                style="@style/actionBtn">
            </TextView>
            <TextView
                android:id="@+id/left_bracket"
                android:text="("
                style="@style/actionBtn">
            </TextView>
            <TextView
                android:id="@+id/right_bracket"
                android:text=")"
                style="@style/actionBtn">
            </TextView>
            <TextView
                android:id="@+id/slash"
                android:text="/"
                style="@style/actionBtn">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:text="7"
                android:id="@+id/num_7"
                style="@style/numberBtn">
            </TextView>
            <TextView
                android:id="@+id/num_8"
                android:text="8"
                style="@style/numberBtn">
            </TextView>
            <TextView
                android:id="@+id/num_9"
                android:text="9"
                style="@style/numberBtn">
            </TextView>
            <TextView
                android:id="@+id/multiplication"
                android:text="*"
                style="@style/actionBtn">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:text="4"
                android:id="@+id/num_4"
                style="@style/numberBtn">
            </TextView>
            <TextView
                android:id="@+id/num_5"
                android:text="5"
                style="@style/numberBtn">
            </TextView>
            <TextView
                android:id="@+id/num_6"
                android:text="6"
                style="@style/numberBtn">
            </TextView>
            <TextView
                android:id="@+id/plus"
                android:text="+"
                style="@style/actionBtn">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:text="1"
                android:id="@+id/num_1"
                style="@style/numberBtn">
            </TextView>
            <TextView
                android:id="@+id/num_2"
                android:text="2"
                style="@style/numberBtn">
            </TextView>
            <TextView
                android:id="@+id/num_3"
                android:text="3"
                style="@style/numberBtn">
            </TextView>
            <TextView
                android:id="@+id/minus"
                android:text="-"
                style="@style/actionBtn">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:text="."
                android:id="@+id/dot"
                style="@style/numberBtn">
            </TextView>
            <TextView
                android:id="@+id/num_0"
                android:text="0"
                style="@style/numberBtn">
            </TextView>
            <TextView
                android:id="@+id/back"
                android:text="BACK"
                style="@style/numberBtn">
            </TextView>
            <TextView
                android:id="@+id/equal"
                android:text="="
                style="@style/actionBtn">
            </TextView>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>